//begin header
+b.HEADER.header(class= headerClass)
	+e.container.container
		+e.A.logo.logo(href='#!')
			+e.IMG(src='img/other/logo.png' alt='Q-Optics')
			
		+b.nav.header__nav
			+e.NAV.body
				-
					navList = [
					['Преимущества', 'advantages'],
					['Выбор продукта', 'choose'],
					['Акции', 'shares']
					]
				+e.UL.list
					for navLink in navList
						+e.LI.list-item: +e.A.list-link(href=`#${navLink[1]}`)= navLink[0]

		+b.contact-block.header__contact
			+e.A.item(href='tel:84957405620')
				+i('phone', 'contact-block__item-icon')
				span 8 (495) 740 56 20
			+e.socials
				+e.A(href='#!' target='_blank'): span: +i('facebook')
				+e.A(href='#!' target='_blank'): span: +i('instagram')

		+b.BUTTON.nav-btn
			+e.SPAN.burger
				+e.SPAN.lines
//end header
